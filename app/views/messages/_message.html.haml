.message-list__message{data: {message: {id: message.id}}}
  .message-list__message-info
    .message-list__message-info-name
      = message.user.name
    .message-list__message-info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__message-chat
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__content' if message.image.present?