.side-bar
  .user-name
    .user-name__top-item
      .user-name__top-item__name
        %span<>
        = current_user.name
      %ul{ class: 'user-name__top-item__menu'}
        %li{ class: 'user-name__top-item__menu__btn'}
          = link_to "#" do
            = icon('fas', 'edit')
            %span<>
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
            %span<>
  .group-list
    = link_to "#", class: "agroup" do
      %p{ class: 'agroup-name'}
        techcamp
      %p{ class: 'agroup-message'}
        まだメッセージがありません
    = link_to "#", class: "agroup" do
      %p{ class: 'agroup-name'}
        techcamp2
      %p{ class: 'agroup-message'}
        まだメッセージがありません
