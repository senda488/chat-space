.side-bar
  .user-name
    .user-name__top-item
      .user-name__top-item__name
        %span<>
        = current_user.name
      %ul{ class: 'user-name__top-item__menu'}
        %li{ class: 'user-name__top-item__menu__btn'}
          = link_to new_group_path do
            = icon('fas', 'edit')
            %span<>
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
            %span<>
  .group-list
    - current_user.groups.each do |group|
      .agroup
        = link_to group_messages_path(group) do
          .agroup-name
            = group.name
          .agroup-message
            = group.show_last_message
    
